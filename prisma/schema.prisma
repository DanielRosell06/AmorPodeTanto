generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doador {
  IdDoador    Int     @id @default(autoincrement())
  CPFCNPJ     String  @unique
  Nome        String
  CEP         String
  Rua         String
  Numero      String
  Bairro      String
  Complemento String?
  Status      Int     @db.SmallInt @default(1)
}

model Contato {
  IdContato Int     @id @default(autoincrement())
  IdDoador  Int
  Contato   String?
  Telefone  String?
  Email     String?
}
